set $mod Mod4
set $left  h
set $down  j
set $upp   k
set $right l

# Configure border style <normal|1pixel|pixel xx|none|pixel>
set $borderpx 4
new_window pixel $borderpx
new_float normal

# Hide borders
hide_edge_borders none

# change borders
bindsym $mod+u border none
bindsym $mod+y border pixel  $borderpx
bindsym $mod+n border normal $borderpx


font pango:Noto Sans Mono 8, Font Awesome

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher), category menu, bmenu (settings)
bindsym $mod+Shift+d exec dmenu_recency
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

bindsym $mod+z exec --no-startup-id morc_menu
bindsym $mod+b exec terminal -e 'bmenu'

# Start Applications
bindsym $mod+F2 exec google-chrome-stable
bindsym $mod+F3 exec pcmanfm
bindsym $mod+F5 exec xdg-open "https://music.youtube.com"
bindsym $mod+F10 exec blueman-manager

# change focus
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$upp   focus up
bindsym $mod+$right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+$left  move left
bindsym $mod+Shift+$down  move down
bindsym $mod+Shift+$upp   move up
bindsym $mod+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split orientation
bindsym $mod+KP_Divide   split h
bindsym $mod+less        split h # Non Mod5 key for | 
bindsym $mod+KP_Subtract split v
bindsym $mod+minus       split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

